<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.example.bosscell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.bosscell.MainActivity$PlaceholderFragment" >

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        app:columnCount="3"
        app:orientation="horizontal"
        app:rowCount="6" >

        <android.support.v7.widget.Space
            android:id="@+id/space1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_row="3" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="3"
            android:height="90dp"
            android:text="*"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="3"
            android:height="90dp"
            android:text="0"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="3"
            android:height="90dp"
            android:text="#"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="2"
            android:height="90dp"
            android:text="7"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="2"
            android:height="90dp"
            android:text="8"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="2"
            android:height="90dp"
            android:text="9"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:height="90dp"
            android:text="4"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:height="90dp"
            android:text="5"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="1"
            android:height="90dp"
            android:text="6"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="0"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:height="90dp"
            android:text="1"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="1"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:height="90dp"
            android:text="2"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

        <Button
            android:id="@+id/button12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_column="2"
            app:layout_gravity="left|top"
            app:layout_row="0"
            android:height="90dp"
            android:text="3"
            android:textSize="40sp"
            android:width="200dp" 
            android:onClick="handleClick"/>

    </android.support.v7.widget.GridLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="center"
            android:src="@drawable/bossfull" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="                    Boss Cellular \n        Enter Your Phone Number"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text=""
        android:textSize="40sp" />

</RelativeLayout>